/* pages/healthAnalyse/healthAnalyse.wxss */
.input{
  border:1px solid grey;
  width:400rpx;
  float:left;
  border-radius: 20rpx;
  margin-left:10rpx;
}

.clear:after{
  content:'\200B';
  clear:both;
  display:block;
  height:0;
}

.icon{
  float:left;
  margin-left:20rpx;
}

.btn{
  float:left;
  width:100rpx;
  height:50rpx;
  font-size:30rpx;
  background-color: rgba(0, 132, 255, 0.582);
  border:0.5px solid black;
  border-radius: 7rpx;
  margin-left:20rpx;
  text-align: center;
}

.btn:active{
  background-color: rgb(0, 132, 255);
}


.page{
  width:750rpx;
  background-color: rgba(185, 184, 171, 0.041);
}

.block{
  background-color: white;
  width:700rpx;
  margin-left:25rpx;
  height:200rpx;
  border-radius: 40rpx;
  box-shadow: 0 0 15rpx 7rpx rgba(0, 0, 0, 0.082);
  margin-top:40rpx;
  overflow: hidden;
}

.content{
  float:left;
  width:500rpx;
  height:200rpx;
}

.img{
  float:left;
  width:200rpx;
  height:200rpx;
}

.image{
  width:200rpx;
  height:200rpx;
}

.title{
  font-weight: bold;
  margin-left:20rpx;
  margin-top:20rpx;
  margin-bottom: 20rpx;
}

.text{
  margin-left:20rpx;
}