/* pages/healthJournal/healthJournal.wxss */
.title{
  font-size:60rpx;
  text-align:center;
  font-weight:bolder;
  color: rgb(90, 187, 231);
  float:left;
}

.line{
  width:700rpx;
  border-top:1px solid rgba(0, 0, 0, 0.192);
  margin:0 auto;
  clear:both;
  margin-bottom:30rpx;
}

.content{
  width:700rpx;
  margin:0 auto;
  border-radius: 20rpx;
  box-shadow: 8rpx 8rpx 20rpx 8rpx rgba(0, 0, 0, 0.068);
  margin-bottom:30rpx;
  padding-top:15rpx;
  padding-bottom:10rpx;
}

.img{
  width:60rpx;
  height:60rpx;
  float:left;
  margin-left:200rpx;
  margin-right:10rpx;
  margin-top:10rpx;
}

.content-title{
  font-size:40rpx;
  font-weight:500;
  margin-left:10rpx;
}

.content-text{
  margin-left:10rpx;
  margin-top:20rpx;
}

.content .line{
  margin:0 auto;
  margin-top:15rpx;
  width:680rpx;
}

.content-img{
  width:230rpx;
  height:230rpx;
  float:left;
  margin-right:3rpx;
  margin-bottom:3rpx;
}

.clear:after{
  content:'\200B';
  clear:both;
  display:block;
  height:0;
}

.images{
  margin-top:30rpx;
}

.option-icon{
  width:50rpx;
  height:50rpx;
  float:left;
  margin-left:30rpx;
  margin-top:20rpx;
  margin-bottom:10rpx;
}

.bianji{
  font-size:20rpx;
  color:lightgray;
  margin-top:30rpx;
  float:left;
  margin-left:140rpx;
}

#save{
  position:fixed;
  bottom:120rpx;
  width:200rpx;
  height:60rpx;
  text-align:center;
  border-radius:30rpx;
  padding-top:7rpx;
  color:darkgray;
  box-shadow: 0 0 15rpx 7rpx rgba(0, 0, 0, 0.068);
  background-color: rgb(255, 255, 255);
  left:250rpx;
}

.v{
  background-color: red;
  width:200rpx;
  height:200rpx;
  position:absolute;
  bottom:0;
  left:200rpx;
}

.section{
  position:relative;
}
