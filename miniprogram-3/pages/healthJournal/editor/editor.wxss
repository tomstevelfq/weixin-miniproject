@import "../common/lib/weui.wxss";
@import "./assets/iconfont.wxss";

.container {
  position: absolute;  
  left: 0; 
  width: 100%;
}

.ql-container {
  box-sizing: border-box;
  width: 100%;
  height: 88%;
  font-size: 16px;
  line-height: 1.5;
  overflow: auto;
  padding: 10px 10px 20px 10px;
  border-top: 1px solid #ECECEC;
  position:absolute;
  left:0;
  top:80rpx;
}

.ql-active {
  color: #22C704;
}

.iconfont {
  display: inline-block;
  width: 30px;
  height: 30px;
  cursor: pointer;
  font-size: 20px;
}

.toolbar {
  box-sizing: border-box;
  padding: 0 10px;
  height: 50px;
  width: 100%;
  position: fixed;
  left: 0;
  right: 100%;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 1px solid #ECECEC;
  border-left: none;
  border-right: none;
}

.save{
  position:absolute;
  bottom:120rpx;
  width:200rpx;
  height:60rpx;
  text-align:center;
  border-radius:30rpx;
  padding-top:7rpx;
  color:darkgray;
  box-shadow: 0 0 15rpx 7rpx rgba(0, 0, 0, 0.068);
  background-color: white;
}


.title{
  position:absolute;
  top:20rpx;
}

.input{
  font-size: 40rpx;
  font-weight: bold;
  text-align:center;
}
